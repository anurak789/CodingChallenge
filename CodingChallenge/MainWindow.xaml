<Window x:Class="CodingChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingChallenge"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="236">
    <Grid>
        <TextBox x:Name="txtScreen" HorizontalAlignment="Left" Height="161" Margin="27,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" TextChanged="txtScreen_TextChanged"/>
        <Button x:Name="btnOne" Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="32,208,0,0" Height="32" Click="btnOne_Click"/>
        <Button x:Name="btnTwo" Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="94,208,0,0" Height="32" Click="btnTwo_Click"/>
        <Button x:Name="btnThree" Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="161,208,0,0" Height="32" Click="btnThree_Click"/>
        <Button x:Name="btnFour" Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="32,258,0,0" Height="32" Click="btnFour_Click"/>
        <Button x:Name="btnFive" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="94,258,0,0" Height="32" Click="btnFive_Click"/>
        <Button x:Name="btnSix" Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="161,258,0,0" Height="32" Click="btnSix_Click"/>
        <Button x:Name="btnSeven" Content="7" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="32,310,0,0" Height="32" Click="btnSeven_Click"/>
        <Button x:Name="btnEight" Content="8" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="94,310,0,0" Height="32" Click="btnEight_Click"/>
        <Button x:Name="btnNine" Content="9" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="161,310,0,0" Height="32" Click="btnNine_Click"/>
        <Button x:Name="btnZero" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="32,360,0,0" Height="32" Click="btnZero_Click"/>
        <Button x:Name="btnWildcart" Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="94,360,0,0" Height="32" Click="btnWildcart_Click"/>
        <Button x:Name="btnSharp" Content="#" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="161,360,0,0" Height="32" Click="btnSharp_Click"/>

    </Grid>
</Window>
